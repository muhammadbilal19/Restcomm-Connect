<sip-app>
	<app-name>RestComm</app-name>
	<display-name>RestComm</display-name>
	<description>Mobicents Restful Communications Framework.</description>
	<servlet-selection>
		<servlet-mapping>
			<servlet-name>CallManager</servlet-name>
			<pattern>
				<or>
					<equal>
						<var>request.method</var>
						<value>INVITE</value>
					</equal>
					<equal>
						<var>request.method</var>
						<value>OPTIONS</value>
					</equal>
					<equal>
						<var>request.method</var>
						<value>REFER</value>
					</equal>
				</or>
			</pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>UserAgentManager</servlet-name>
			<pattern>
				<or>
					<equal>
						<var>request.method</var>
						<value>REGISTER</value>
					</equal>
				</or>
			</pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>SmsService</servlet-name>
			<pattern>
				<or>
					<equal>
						<var>request.method</var>
						<value>MESSAGE</value>
					</equal>
				</or>
			</pattern>
		</servlet-mapping>
	</servlet-selection>

	<servlet>
		<servlet-name>RestComm</servlet-name>
		<display-name>RestComm</display-name>
		<description>The RestComm Servlet.</description>
		<servlet-class>
			org.restcomm.connect.application.Bootstrapper
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SmsService</servlet-name>
		<display-name>SmsService</display-name>
		<description>SMS Service.</description>
		<servlet-class>
			org.restcomm.connect.sms.SmsServiceProxy
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>CallManager</servlet-name>
		<display-name>CallManager</display-name>
		<description>The RestComm Call Manager.</description>
		<servlet-class>
			org.restcomm.connect.telephony.CallManagerProxy
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>UserAgentManager</servlet-name>
		<display-name>UserAgentManager</display-name>
		<description>The RestComm User Agent Manager.</description>
		<servlet-class>
			org.restcomm.connect.telephony.ua.UserAgentManagerProxy
		</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>ProxyManager</servlet-name>
		<display-name>ProxyManager</display-name>
		<description>The RestComm Proxy Manager.</description>
		<servlet-class>
			org.restcomm.connect.telephony.proxy.ProxyManagerProxy
		</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>

	<listener>
		<listener-class>
			org.restcomm.connect.application.Bootstrapper
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.restcomm.connect.sms.SmsServiceProxy
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.restcomm.connect.telephony.CallManagerProxy
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.restcomm.connect.telephony.ua.UserAgentManagerProxy
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.restcomm.connect.telephony.proxy.ProxyManagerProxy
		</listener-class>
	</listener>

	<context-param>
		<param-name>org.restcomm.servlets.sip.OVERRIDE_SYSTEM_HEADER_MODIFICATION
		</param-name>
		<param-value>Modifiable</param-value>
	</context-param>
</sip-app>
