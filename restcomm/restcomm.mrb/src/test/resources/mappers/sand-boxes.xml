<mapper namespace="org.mobicents.servlet.sip.restcomm.dao.SandBoxesDao">
  <insert id="addSandBox" parameterType="map">
    INSERT INTO "restcomm_sand_boxes" ("date_created", "date_updated", "pin", "account_sid", "phone_number", "application_sid", "api_version", "voice_url", "voice_method",
    "sms_url", "sms_method", "status_callback", "status_callback_method", "uri") VALUES (#{date_created}, #{date_updated}, #{pin}, #{account_sid}, #{phone_number}
    #{application_sid}, #{api_version}, #{voice_url}, #{voice_method}, #{sms_url}, #{sms_method}, #{status_callback}, #{status_callback_method}, #{uri});
  </insert>
  
  <select id="getSandBox" parameterType="string" resultType="hashmap">
    SELECT * FROM "restcomm_sand_boxes" WHERE "account_sid"=#{account_sid};
  </select>
  
  <delete id="removeSandBox" parameterType="string">
    DELETE FROM "restcomm_sand_boxes" WHERE "account_sid"=#{account_sid};
  </delete>
  
  <update id="updateSandBox" parameterType="map">
    UPDATE "restcomm_sand_boxes" SET "date_updated"=#{date_updated}, "voice_url"=#{voice_url}, "voice_method"=#{voice_method}, "sms_url"=#{sms_url}, "sms_method"=#{sms_method}
    "status_callback"=#{status_callback}, "status_callback_method"=#{status_callback_method} WHERE "account_sid"=#{account_sid};
  </update>
</mapper>